<%# app/views/retos/new.html.erb %>

<!-- Incluir el menú de cabecera -->
<%= render 'shared/header' %>
<h1>Crear un nuevo reto</h1>

<%= form_for @reto do |f| %>
  <div class="form-group">
    <%= f.label :nombre, "Nombre del reto" %>
    <%= f.text_field :nombre, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :descripcion, "Descripción del reto" %>
    <%= f.text_area :descripcion, class: 'form-control', rows: 5, required: true %>
  </div>

  <div class="form-group">
    <%= f.label :fuente, "Fuente (URL o referencia)" %>
    <%= f.text_field :fuente, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :dificultad, "Dificultad" %>
    <%= f.select :dificultad, ['Fácil', 'Intermedio', 'Difícil'], class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :empresa, "Empresa" %>
    <%= f.text_field :empresa, class: 'form-control', required: true %>
  </div>

  <%= f.submit "Crear reto", class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Volver', root_path, class: 'btn btn-secondary' %>
